<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss,SSS} %level %class{1} %t %NDC %message%n}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.homeclimatecontrol.xbee.zigbee.NodeDiscoverApp" level="info" />
        <Logger name="com.homeclimatecontrol.xbee" level="warn" />
        <Logger name="com.rapplogic.xbee" level="warn" />
        <Root level="DEBUG">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>
